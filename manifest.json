{
    "name": "Uncage",
    "action": {},
    "manifest_version": 3,
    "version": "0.4",
    "description": "Uncage Twitter browsing on the desktop.",
    "content_scripts": [
      {
        "matches": ["https://*.twitter.com/*"],
        "js": ["uncage.js"]
      }
    ],
    "icons": {
      "16":  "/icons/uncage16.png",
      "32":  "/icons/uncage32.png",
      "48":  "/icons/uncage64.png",
      "128": "/icons/uncage128.png"
    }
  }